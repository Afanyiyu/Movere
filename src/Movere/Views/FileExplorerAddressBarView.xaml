<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Movere.Controls"
             x:Class="Movere.Views.FileExplorerAddressBarView">

    <c:OverlappedItemsPanel Background="Transparent"
                            TappedCommand="{Binding EditCommand}">

        <TextBox IsVisible="{Binding IsEditing}"
                 Text="{Binding Address}" />

        <ItemsControl IsVisible="{Binding !IsEditing}"
                      Items="{Binding AddressPieces}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <c:BreadcrumbPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Classes="transparent"
                                Padding="2,4"
                                Content="{Binding Name}"
                                Command="{Binding $parent[UserControl].DataContext.OpenAddressPieceCommand}"
                                CommandParameter="{Binding}" />
                        <Button Classes="transparent"
                                Padding="2,4"
                                Content="»" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </c:OverlappedItemsPanel>

</UserControl>
