<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:flex="clr-namespace:Avalonia.Flexbox;assembly=Avalonia.Flexbox"
        xmlns:conv="clr-namespace:Movere.Converters"
        xmlns:vm="clr-namespace:Movere.ViewModels"
        x:Class="Movere.Views.MessageDialog"
        x:CompileBindings="True"
        x:DataType="vm:MessageDialogViewModel"
        CanResize="False"
        MinWidth="256"
        MinHeight="96"
        MaxWidth="512"
        MaxHeight="256"
        SizeToContent="WidthAndHeight"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <conv:DialogResultIsCancelConverter x:Key="DialogResultIsCancelConverter" />
    </Window.Resources>

    <DockPanel Margin="4">

        <ItemsControl DockPanel.Dock="Bottom"
                      HorizontalAlignment="Right"
                      Margin="4"
                      Items="{Binding DialogResults}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <flex:FlexPanel ColumnSpacing="8"
                                    RowSpacing="8"
                                    JustifyContent="FlexEnd" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name}"
                            Command="{ReflectionBinding $parent[Window].DataContext.CloseCommand}"
                            CommandParameter="{Binding}"
                            IsCancel="{Binding, Converter={StaticResource DialogResultIsCancelConverter}}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <DockPanel Margin="4">

            <Image DockPanel.Dock="Left"
                   IsVisible="{Binding !!Icon}"
                   Margin="4"
                   Width="48"
                   Height="48"
                   Source="{Binding Icon}" />

            <TextBlock Margin="4"
                       VerticalAlignment="Stretch"
                       Text="{Binding Message}"
                       TextWrapping="Wrap" />

        </DockPanel>

    </DockPanel>

</Window>
